include ..\Makefile

#===============================================================================
# Targets
#-------------------------------------------------------------------------------

all:		nibl.bin

nibl.bin:	nibl.obj
		$(LK) -code $$0000-$$0fff -bss $$1000-$$1fff -bin -output $@ nibl.obj

#===============================================================================
# Dependencies
#-------------------------------------------------------------------------------

nibl.obj:	nibl.asm
